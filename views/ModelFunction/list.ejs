	generate: function()  /* Generate Function */
	{
		this.$.menu_dialog.close()
		var filtro = {"id": this.key}
		var mfunction = this.data.find(filtro)[0]
		
		//console.log('Function: ', mfunction)
		//console.log('Attributes 1: ', this.attrs)
		
		var attrs = {}
		for (i=0; i < this.attrs.length; i++ )
		{
			attrs[this.attrs[i].attribute] = this.attrs[i]
			if (typeof attrs[this.attrs[i].attribute].ref_model !== 'undefined')
				attrs[this.attrs[i].attribute].model = attrs[this.attrs[i].attribute].ref_model.name	
			 else 
				attrs[this.attrs[i].attribute].model = ''
			//delete attrs[this.attrs[i].attribute].attribute
		}
		//console.log('Attributes: ', attrs)
		
		if (this.attrs.length != 0)
		  switch(mfunction.type) {
			case 'list':
				var fs = require('fs')
				var data = JSON.stringify({
						app: this.app,
						mfunction: mfunction,
						attrs: attrs
					})
				var file_path = './generator/data.json'
				fs.writeFileSync(file_path, data, 'utf8')
		
				const ipcRenderer = require('electron').ipcRenderer;
				ipcRenderer.send('create-mfunction', {mfunc: mfunction.name, path: file_path});
				
				break
			default:
				alert('Function Type Does not recognized')
		  }
		else 
			alert('No Attributes Found for model '+mfunction.model.name, 'Generate Function')
	}
