		this.$.id_sort_d.classList.add("hide")
		this.$.account_name_sort_d.classList.add("hide")
		this.$.usr_sort_d.classList.add("hide")
		this.$.name_sort_d.classList.add("hide")
		this.$.pwd_sort_d.classList.add("hide")
		this.$.profile_name_sort_d.classList.add("hide")
		this.$.email_sort_d.classList.add("hide")
		this.$.language_sort_d.classList.add("hide")
		this.$.status_sort_d.classList.add("hide")
