				{column: "account_name", type: "string", model: "Account", display: true},
				{column: "usr", type: "string", display: true},
				{column: "name", type: "string", display: true},
				{column: "pwd", type: "password", display: false},
				{column: "profile_id", type: "integer", model: "Profile", display: false},
				{column: "profile_name", type: "string", model: "Profile", display: true},
				{column: "email", type: "string", display: false},
				{column: "language", enum: ["en","es","pt"], enumdes: ["<%= lng("English")%>","<%= lng("Español")%>","<%= lng("Portugues")%>"], display: true},
